@using MvcLibrary.Models.Entity
@model List<TBLBOOK>
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Gallery</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>Gallery</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:100%">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Count; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                    }
                }
            </ol>


            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @for (int j = 0; j < Model.Count; j++)
                {
                    if (j == 0)
                    {
                        <div class="item active">
                            <img src="@Model[0].CoverImage" alt="Library" style="width:100%; height:705px">
                        </div>
                    }
                    else
                    {

                        <div class="item">
                            <img src="@Model[j].CoverImage" alt="Library2" style="width:100%; height:705px">
                        </div>
                    }
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</body>
</html>
<div style="margin-top:50px">
    <form action="/Statistics/UploadPicture" method="post" enctype="multipart/form-data">
        <input type="file" name="fileBase" id="fileBase" value="Select File" class="btn btn-success" />
        <br />
        <input type="submit" value="Save" class="btn btn-warning" />
    </form>
</div>

