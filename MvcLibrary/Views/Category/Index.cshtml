@using MvcLibrary.Models.Entity
@model List<TBLCATEGORY>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Categories</h2>
<table class="table table-striped table-bordered">
    <tr style="background-color:rgb(252,178,22)">
        <th>CategoryID</th>
        <th>CategoryName</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/ReturnCategory/@item.ID" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Category/AddNewCategory/" class="btn btn-primary">Add New Category</a>