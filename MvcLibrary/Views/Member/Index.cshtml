@using MvcLibrary.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLMEMBERS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Members</h2>

<table class="table table-striped table-bordered">
    <tr style="background-color:rgb(252,178,22)">
        <th>Member ID</th>
        <th>Member Name</th>
        <th>Member LastName</th>
        <th>Member School</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Member BookHistory</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.LastName</td>
            <td>@item.School</td>
            <td><a href="/Member/DeleteMember/@item.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Member/ReturnMember/@item.ID" class="btn btn-warning">Update</a></td>
            <td><a href="/Member/BookHistory/@item.ID" class="btn btn-success" style="background-color:lightseagreen;color:white">Book History</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<a href="/Member/AddNewMember/" class="btn btn-primary">Add New Member</a>